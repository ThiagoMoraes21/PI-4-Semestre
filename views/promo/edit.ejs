<% include ../partials/header %>
  <div class="container">
      <form action="/" method="post">
        <div class="form-group">
          <label for="exampleFormControlInput1">Nome do Produto</label>
          <input type="text" name="name" class="form-control" value="<%= post.name %>">
        </div>
         <div class="form-group">
          <label for="exampleFormControlInput1">Link do site</label>
          <input type="text" name="site" class="form-control" value="<%= post.site %>">
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Link da Imagem</label>
          <input type="text" name="image" class="form-control" value="<%= post.image %>">
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Preço</label>
          <input type="text" name="price" class="form-control" value="<%= post.price %>">
        </div>
        <div class="form-group">
          <label for="textArea">Descrição</label>
          <textarea name="desc" class="form-control" id="textArea"
           rows="3"><%= post.description %></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Postar Oferta</button>
        </div>
  </form>
 </div>
<% include ../partials/footer %>
