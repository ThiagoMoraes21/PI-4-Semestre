<% include ../partials/header %>

<!----------------- HEADER --------------------->
  <header id="indexPage">
    <div class="jumbotron">
      <div class="row">
        <div class="presentation-header">
          <p>A comunidade que encontra e compartilha as melhores ofertas!</p>
          <a href="/register" class="btn btn-primary px-3 py-2">Registrar-se</a>
        </div>
        <img src="/img/main-bg.svg" class="jumb-bg">
      </div>
      </div>
  </header>

  <body>
    <div class="container">
      <div class="row">
          <div class="col-12">
            <hr class="col-3">
            <h2 class="text-center" id="topOfertas">Top Ofertas</h2>
            <hr class="col-3">
          </div>

          <!------------------------- LIST OF CARDS ---------------------->
          <% posts.forEach((post) => { %>
            <% if(post.category == 'celular') { %>
                <div class="mix celular col-sm-6 col-md-6 col-lg-4" data-order="<%= post.votes %>">
            <% } else if(post.category == 'notebook') { %>
                <div class="mix notebook col-sm-6 col-md-6 col-lg-4" data-order="<%= post.votes %>">
           <% } else if(post.category == 'tablet') { %>
                <div class="mix tablet col-sm-6 col-md-6 col-lg-4" data-order="<%= post.votes %>">
           <% } %>
            <div class="">
                <a href="/promocao/<%= post._id %>" class="custom-card">
                  <div class="card">
                      <div>
                        <p class="price">R$<%= post.price %></p>
                        <img src="<%= post.image %>" class="card-img-top" alt="...">
                      </div>
                      <div class="card-body">
                        <h5 class="card-title"><%= post.name %></h5>
                        <p class="card-text"><%= post.description.substring(0, 0) %></p>
                        
                        <!---------------- Card buttons -------------->
                        <div class="card-buttons">
                          <!----- Like button ----->
                          <form action="" method="post" style="display: inline-block;">
                            <input type="hidden" name="like" value="<%= post._id %>">
                            <button type="button" class="btn btn-success">
                              <i class="far fa-thumbs-up"></i>
                            </button>
                          </form>
                          
                          <!----- Dislike button ------->
                          <form action="" method="post" style="display: inline-block;">
                            <input type="hidden" name="dislike" value="<%= post._id %>">
                            <button type="button" class="btn btn-danger">
                              <i class="far fa-thumbs-down"></i>
                            </button>
                          </form>

                          <!--- Store button ----->
                          <a href="<%= post.site %>" class="btn btn-primary btn-loja ml-3">Ir Ã  Loja</a>
                        </div>
                        <p class="votes" value=""><%= post.votes %></p>
                      </div>
                  </div>
                </a>
            </div>
            </div>
          <% }); %>
      </div>
    </div>
  </body>
<% include ../partials/footer %>