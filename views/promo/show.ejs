<% include ../partials/header %>
<header>
    <div class="pic-container mt-5">
      <img src="<%= post.image %>" alt="<%= post.name %>">  
    </div>
    <a href="<%= post.site %>" class="btn btn-primary btn-pic-page">Ir à Loja</a>
</header>

<div class="show-page">
    <!--
      <a href="/promocao/<%= post._id %>/edit" class="btn btn-success">Editar</a>
      <form action="/<%= post._id %>?_method=DELETE" method="post">
        <button type="submit" class="btn btn-danger" name="button">Excluir</button>
      </form>
    -->

    <div class="info-container">
      <h4><%= post.name %></h4>
      <div class="price-and-store">
        <p class="price price-show-page">R$ <%= post.price %></p>
        <p class="store-name">vendido por: <%= post.store %></p>
      </div>
    </div>
    <div class="description">
      <h5>Descrição</h5>
      <p><%= post.description %></p>
    </div>
  </div>

  <div class="container">
    <div class="comments-section">
       <h3>Comentários</h3>
          <div class="comment-area">
            <ul class="list-group" id="comments-section">
              <!-- load comments  -->
              <% post.comments.forEach(function(comment){ %>
                <li class="list-group-item">
                  <span class="lead">
                    <%= comment.text %>
                  </span>
                  <div class="clearfix"></div>
                </li>
              <% }); %>
            </ul>
          </div>

          
        <form action="/promocao/<%= post._id %>/comments" method="post" id="new-comment-form">
            <div class="form-group">
              <input class="form-control" type="text" name="comment[text]" id="commentInput"
               placeholder="Comentar...">
            </div>
            <div class="form-group">
              <button class="btn btn-primary btn-comment" type="submit">Comentar</button>
            </div>
        </form>
    </div>
  </div>
<% include ../partials/footer %>
