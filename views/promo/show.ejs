<% include ../partials/header %>
  <h1>SHOW PAGE</h1>
  <div class="container">
    <img src="<%= post.image %>" alt="<%= post.name %>">
    <a href="<%= post.site %>" class="btn btn-primary">Ir à Loja</a>
    <a href="/promocao/<%= post._id %>/edit" class="btn btn-success">Editar</a>
    <form action="/<%= post._id %>?_method=DELETE" method="post">
      <button type="submit" class="btn btn-danger" name="button">Excluir</button>
    </form>
    <p><%= post.price %></p>
    <p><%= post.votes %></p>
    <p><%= post.name %></p>
    <p><%= post.description %></p>
  </div>

  <div class="container">
    <div class="comments">
       <h3>Comentários</h3>
          <div class="comment-area">
            <ul class="list-group" id="comments-section">
              <!-- load comments  -->
              <li>Test</li>
              <% post.comments.forEach(function(comment){ %>
                <li class="list-group-item">
                  <span class="lead">
                    <%= comment.text %>
                  </span>
                  <div class="clearfix"></div>
                </li>
              <% }); %>
            </ul>
          </div>

          
        <form action="/promocao/<%= post._id %>/comments" method="post" id="new-comment-form">
            <div class="form-group">
              <input class="form-control" type="text" name="comment[text]" id="comment-input"
               placeholder="Comentar...">
            </div>
            <div class="form-group">
              <button class="btn btn-primary" type="submit">Comentar</button>
            </div>
        </form>
    </div>
  </div>
<% include ../partials/footer %>
